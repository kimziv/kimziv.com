baseColor = #666

body
	background #dddddd
	padding 0px
	margin 0px
	font-size 14px
	font-weight normal
	font-family "Microsoft Yahei","Helvetica Neue","Luxi Sans","DejaVu Sans",Tahoma,"Hiragino Sans GB",STHeiti !important
a
	color darken(baseColor,50%)
	text-decoration none

#top
	color darken(baseColor,50%)
	font-size 24px
	width 920px
	padding 5px 20px 5px 20px
	display inline-block
	p
		float left
	img
		float right
		margin-left 400px

#theme
	width 80px
	height 40px
	float right
	padding-right 0px
	.themeItem
		margin-left 10px
		width 30px
		height 10px
		float left
	#white
		background #fff
	#gray
		background #fff


#backTop
	left 50%
	bottom 50%
	padding  5px
	border 1px dotted #ddd
	color  #eee
	font-size  24px
	position  fixed
	cursor  pointer
	display  none

#main
	margin-left auto
	margin-right auto
	margin-top 0px
	width 960px
	padding 5px 5px 5px 5px
	background #ffffff

#content
	padding 5px 20px 5px 20px

#item
	border-top 3px dashed #AAAAAA
	border-bottom 3px dashed #AAAAAA
	padding 30px 0 30px 0
	overflow hidden
	img
		float left
		text-align center
		vertical-align center
		border 1px solid #AAAAAA
		padding 3px
	h2
		text-align center

.right
	float right
	width 430px

#text
	vertical-align center
	color baseColor
	padding-bottom 15px
	line-height 24px

#author
	border-top 1px solid #AAAAAA
	color baseColor
	padding-top 15px
	padding-bottom 10px
	text-align center
	a	
		color baseColor

.radio
	padding-top 10px
	iframe
		scrolling no
		border 0
		width 420px
		height 190px
		hspace -100px
		vspace -100px
		marginheight -100px
		marginwidth -100px
		align center

.share
	border-radius 3px
	border 1px dashed baseColor
	padding 1px 2px
	font-size 12px
	color baseColor
	display inline
	margin-top 50px
	margin-left 10px
	float right
	a
		color baseColor
		text-decoration none	

#bottom
	width 780px
	margin-left auto
	margin-right auto
	text-align center
	color #cccccc
	font-size 12px
	a
		color #cccccc

#tongji
	display none